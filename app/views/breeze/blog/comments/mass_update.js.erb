$('<%= @comments.map { |c| "[id=comment_#{c.id}]" }.join(", ") %>').fadeOut(function() { $(this).remove(); });
$('#tab_<%= @comments.first.status %> .comments-container').replaceWith('<%= escape_javascript render("comments", :comments => blog.comments.send(@comments.first.status).descending(:created_at).paginate(:page => 1)) %>');
$('#tab_awaiting_reply .comments-container').replaceWith('<%= escape_javascript render("comments", :comments => blog.comments.awaiting_reply.descending(:created_at).paginate(:page => 1)) %>');
makeDraggable('.comments-container .comment');