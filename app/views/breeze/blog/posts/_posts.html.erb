<div class="posts-container container">
	<%= form_tag admin_blog_posts_path, :method => :put do -%>
    <div class="with-selected" style="display: none;">
      <strong>With selected:</strong>
      <%= link_to "Publish", admin_blog_posts_path, :class => "small green publish button" %>
      <%= link_to "Unpublish", admin_blog_posts_path, :class => "small unpublish button" %>
      <%= link_to "Delete", admin_blog_posts_path, :class => "small red delete button" %>
    </div>
    <table class="fancy posts">
      <thead>
        <tr>
          <th class="first" style="width:5%;"><input class="checkbox select-all" type="checkbox" /></th>
          <th style="width:35%;">Post</th>
          <th style="width:15%;">Author</th>
          <th style="width:20%;">Tags</th>
          <th style="width:10%;">Comments</th>
          <th class="last" style="width:15%;">Date</th>
        </tr>
      </thead>
      <tbody>
        <% if @posts.any? -%>
	        <%= render :partial => "post", :collection => posts %>
        <% else -%>
	        <tr><td class="empty" colspan="7">There are no <%= view %> posts to show here.</td></tr>
        <% end -%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="6"><%= will_paginate posts %>&nbsp;</td>
        </tr>
      </tfoot>
    </table>
	<% end -%>
</div>