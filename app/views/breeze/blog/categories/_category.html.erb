<%= content_tag :li, :class => :category, :id => "category_#{category.id}" do %>
  <%= link_to category.name, category.permalink, :class => "category-name", :target => :_blank %>
  <%= content_tag :small, category.posts.count %>
  <%= link_to "Delete".html_safe, admin_blog_category_path(category, :format => :js), :remote => true, :method => :delete, :class => "small red delete button" %>
  <%= link_to "Edit", edit_admin_blog_category_path(category), :class => "small edit button" %>
  <%= link_to "View", category.permalink, :class => "small view button", :target => :_blank %>
<% end %>